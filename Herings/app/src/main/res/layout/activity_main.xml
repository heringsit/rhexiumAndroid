<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:id="@+id/rl_splash"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/bg_spalsh"
            android:scaleType="centerCrop"
            android:id="@+id/imv_splash_bg"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_01"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/imv_splash_01"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_02"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/imv_splash_02"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_03"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/imv_splash_03"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_txt_white"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/imv_splash_txt_white"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_splash_txt_green"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:id="@+id/imv_splash_txt_green"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:id="@+id/rl_layout_white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="180dp"
            android:src="@mipmap/ic_splash_icon"
            android:scaleType="centerCrop"
            android:id="@+id/imv_splash_icon"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="280dp"
            android:src="@mipmap/ic_splash_des"
            android:scaleType="centerCrop"
            android:id="@+id/imv_splash_des"
            android:visibility="visible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@mipmap/ic_splash_mark"
            android:scaleType="centerCrop"
            android:id="@+id/imv_splash_mark"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:id="@+id/rl_layout_black"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_select_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_80282828"
        android:visibility="gone"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_select_camera"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/bg_gallery"
                android:gravity="center"
                android:text="@string/str_capture_camera"
                android:textColor="@color/color_282828"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_select_gallery"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@mipmap/bg_camera"
                android:gravity="center"
                android:text="@string/str_select_image"
                android:textColor="@color/color_282828"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tv_select_cancel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/bg_cancel"
                android:gravity="center"
                android:text="@string/str_cancel"
                android:textColor="@color/color_007aff"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>